<Window x:Class="RegistrationSystem.View.MainView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationSystem.View.MainView"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <RadioButton Style="{StaticResource StyleRadioButton}" Content="Пользователи" Margin="10" Width="300" Height="40" Click="PatchingUsersPage"/>
                <RadioButton Style="{StaticResource StyleRadioButton}" Content="Камера"  Margin="10" Width="150"  Height="40"/>
                <RadioButton Style="{StaticResource StyleRadioButton}" Content="Персонал" Margin="10" Width="200" Height="40"/>
                <RadioButton Style="{StaticResource StyleRadioButton}" Content="Личный кабинет" IsChecked="True" Margin="10" Width="350" Click="AccountPageChange" Height="40"/>
            </StackPanel>
            <ContentControl x:Name="PageChange"/>
        </StackPanel>
    </Grid>
</Window>

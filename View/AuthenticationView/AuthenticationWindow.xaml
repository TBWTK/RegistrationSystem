<Window x:Class="RegistrationSystem.View.AuthenticationView.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationSystem.View.AuthenticationView"
        mc:Ignorable="d"
        Height="700" Width="500">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <RadioButton Style="{StaticResource StyleRadioButton}" Content="Вход" IsChecked="True" Margin="10" Width="100" Click="LoginPageChange" Height="40"/>
                <RadioButton Style="{StaticResource StyleRadioButton}" Content="Регистрация" Margin="10" Width="275" Click="RegistrationPageChange" Height="40"/>
            </StackPanel>
            <ContentControl x:Name="PageLoginOrReg"/>
        </StackPanel>
    </Grid>
</Window>
